\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{lstBUGS}[2012/08/09 listings language support for BUGS and Stan]
\RequirePackage{listings}

\lstdefinelanguage{BUGS}{
  keywords=[1]{for,in,model},%
  morecomment=[l]{\#},%
  sensitive=true,%
  alsoletter={.},%
  otherkeywords={<-,~},%
  literate={<-}{{$\leftarrow$}}1 {~}{{$\sim$}}1%
}
\lstdefinelanguage[JAGS]{BUGS}[]{BUGS}{
  morekeywords=[1]{data,var},%
  morecomment=[n]{/*}{*/}%
}
\lstalias[]{JAGS}[JAGS]{BUGS}
\lstalias[]{OpenBUGS}[]{BUGS}
\lstalias[]{WinBUGS}[]{BUGS}

\lstdefinelanguage{Stan}{
  %% Cannot figure out how to get spaces in a keyword
  %% Reserved + block declarations
  keywords=[1]{for,in,data,parameters,model,%
    transformed,generated,lp__,lower,upper,print,T},%
  %% Types
  keywords=[2]{int,real,vector,simplex,ordered,%
    row_vector,matrix,corr_matrix,cov_matrix,%
    positive_ordered},%
  % Just assignment operators
  otherkeywords={<-,~},%
  sensitive=true,%
  morecomment=[l]{\#},%
  morecomment=[l]{//},%
  morecomment=[n]{/*}{*/},%
  string=[d]"%,
  literate={<-}{{$\leftarrow$}}1 {~}{{$\sim$}}1%
}

